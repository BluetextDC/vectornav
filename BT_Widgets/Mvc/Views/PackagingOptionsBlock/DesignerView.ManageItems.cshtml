@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<div id="list-items">
    <div data-ng-repeat="item in listItemsObj" class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label" ng-bind="item.title"></label>
            </div>
            <div class="col-md-4">
                @*<label class="form-label" ng-bind="item.description"></label>*@
            </div>
            <div class="col-md-4">
                <button class="btn btn-danger" ng-click="deleteListItem($index)">Delete</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <input class="form-control" type="text" name="newListItem" id="newListItem" placeholder="Enter title" ng-model="newListItem" />

            </div>
            <div class="col-md-4">
                <input class="form-control" type="text" name="newDescription" id="newDescription" placeholder="Enter description" ng-model="newDescription" />
            </div>
            <div class="col-md-4">

            </div>
        </div>

    </div>
</div>

