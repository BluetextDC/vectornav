<div class="form-group">
    <expander expander-title="Select Image">
        <sf-image-field class="sf-Media--info modal-settings modal-settings-space"
                        sf-model="properties.ImageId_Single.PropertyValue"
                        sf-image="selectedImage"
                        sf-provider="properties.ImageProviderName.PropertyValue"
                        sf-media-settings="@SettingsHelpers.GetMediaSettings("Image")"
                        id="newImageId"></sf-image-field>
    </expander>
</div>

<div style="clear:both"></div>
<div class="form-group" style="margin-top: 20px">
    <button class="btn btn-primary" id="add-list-item" ng-click="addListItem()">Add</button>
</div>
