@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/bootstrap.min.css"), "head")
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/custom.min.css"), "head")

@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/scss/common/_common.scss"), "head")

@model BT_Widgets.Mvc.Models.GatedResourceForm.GatedResourceFormViewModel
<section class="development_useritem_view">
    <div class="container">
        <button type="button" class="btn btn_border2" data-toggle="modal" data-target="#resourceDownload">
            Download Resource
        </button>
    </div>
</section>

<div class="modal fade custom_modal" id="resourceDownload" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"><img src="~/ResourcePackages/BT/images/close_icon.svg" alt="icon"></span>
            </button>
            <div class="modal-body">
                <h2 class="text-uppercase">RESOURCE DOWNLOAD FORM</h2>
                <form>
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Name*" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="Email*" value="@Model.Email">
                    </div>
                    <div class="form-group">
                        <input type="text" name="phone" class="form-control" placeholder="Phone" value="@Model.Phone">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="3" placeholder="Beyond this document, is there any other documentation you’d like to be sent?">@Model.Message</textarea>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox short_checkbox">
                            <input type="checkbox" class="custom-control-input" id="agreeresource" checked="@Model.Consent">
                            <label class="custom-control-label" for="agreeresource">By selecting this option, I agree to receive news and information about VectorNav and its partners. I understand that I can unsubscribe at any time.</label>
                        </div>
                    </div>
                    <div class="text-center">
                        @Html.Raw(Model.Link)
                    </div>
                </form>

                <div class="text-center">
                    <p class="mb-0"><a href="#">Log in</a> to access all documentation</p>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Script(Url.WidgetContent("~/ResourcePackages/BT/js/bootstrap.bundle.min.js"), "bottom")




