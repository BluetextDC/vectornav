@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/bootstrap.min.css"), "head")
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/custom.min.css"), "head")


@model BT_Widgets.Mvc.Models.HomePageHero.HomePageHeroViewModel

@{
    //string HomeImage = "";// "/ResourcePackages/BT/images/banner_bg.jpg";
    // string VideoURL = "";// "/ResourcePackages/BT/images/banner_video.mp4";



    if (!string.IsNullOrEmpty(Model.SelectedSizeUrl))
    {
        string HomeImage = Model.SelectedSizeUrl;
        string VideoURL = "";
    }



    if (!string.IsNullOrEmpty(Model.SelectedVideoSizeUrl))
    {
        string VideoURL = Model.SelectedVideoSizeUrl;
        string HomeImage = "";
    }


}
    <body class="front_page">
       
        @Model.ListItem_ValueVM
        <main class="wraper home_page">
            <section class="banner_sec">
                <video width="100%" height="100%" id="myVideo" poster="@HomeImage" autoplay loop muted>
                    <source src="@VideoURL" type="video/mp4">
                </video>
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-lg-6">
                            <div class="content">
                                <h1 class="text-uppercase">@Model.Title_VM</h1>
                                <p>@Model.Subtitle </p>
                                @Html.Raw(Model.Link)
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </body>







