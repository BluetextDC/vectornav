
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/bootstrap.min.css"), "head")
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/custom.min.css"), "head")

@{
    int cnt = 0;
    string className = "carousel-item active";

    int count = 0;
    string ActiveSlide = "active";
}
<main class="wraper product_page">
    <section class="case_study_sec">
        <div class="container">
            <div id="caseStudy" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @foreach (var listItem in ViewBag.ListItems_Obj)
                    {
                        if (count != 0)
                        {
                            ActiveSlide = "";
                        }
                        <li data-target="#caseStudy" data-slide-to="@count" class="@ActiveSlide"></li>
                        count++;
                    }
                    @*<li data-target="#caseStudy" data-slide-to="0" class="active"></li>
                    <li data-target="#caseStudy" data-slide-to="1"></li>
                    <li data-target="#caseStudy" data-slide-to="2"></li>*@
                </ol>
                <div class="carousel-inner">
                    @foreach (var listItem in ViewBag.ListItems_Obj)
                    {
                        if (cnt == 0)
                        {
                            className = "carousel-item active";
                            cnt++;
                        }
                        else
                        {
                            className = "carousel-item";
                        }

                        <div class="@className">
                            <div class="content">
                                <h2 class="text-uppercase">@listItem.title</h2>
                                <p>@listItem.description</p>
                            </div>
                        </div>
                    }
