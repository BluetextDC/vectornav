                </div>
                <a class="carousel-control-prev" href="#caseStudy" role="button" data-slide="prev">
                    <img src="~/ResourcePackages/BT/images/left_arrow.svg" alt="icon" class="img-fluid">
                    <span class="sr-only">Previous</span>
                </a>
