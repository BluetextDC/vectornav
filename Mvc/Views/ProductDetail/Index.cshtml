@model Telerik.Sitefinity.Ecommerce.Catalog.Model.Product
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@{
    Layout = null;
}

    <link href="~/Mvc/Views/ProductDetail/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Mvc/Views/ProductDetail/css/custom.min.css" rel="stylesheet" />
<main class="wraper product_page">
    <section class="banner_sec">
        <div class="top_view">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-inline product_method">
                            <li class="list-inline-item"><img src="~/Assets/Images/product_icon01.svg" alt="icon" class="img-fluid"></li>
                            <li class="list-inline-item"><img src="~/Assets/Images/product_icon02.svg" alt="icon" class="img-fluid"></li>
                            <li class="list-inline-item"><img src="~/Assets/Images/product_icon03.svg" alt="icon" class="img-fluid"></li>
                            <li class="list-inline-item"><img src="~/Assets/Images/product_icon04.svg" alt="icon" class="img-fluid"></li>
                            <li class="list-inline-item"><img src="~/Assets/Images/product_icon05.svg" alt="icon" class="img-fluid"></li>
                        </ul>
                        <div class="heading_h1">
                            <h1 class="text-uppercase">@Model.Title</h1>
                        </div>
                        <div class="description_info_view">
                            <h6 class="small_heading">Introduction</h6>
                            <p>@Model.Description</p>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5>2,000°/s</h5>
                                        <p>Gyro Range</p>
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5>5°/hr</h5>
                                        <p>Gyro In-Run Bias</p>
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5>.02°/vHz</h5>
                                        <p>Angular Random Walk</p>
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5>16g</h5>
                                        <p>Accel Range</p>
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5><40ug</h5>
                                        <p>Accel In-Run Bias</p>
                                    </div>
                                </li>
                                <li class="list-inline-item">
                                    <div class="item_info">
                                        <h5>0.08m/s/vhr</h5>
                                        <p>Velocity Random Walk</p>
                                    </div>
                                </li>
                            </ul>
                            <button type="button" class="btn btn_border2">Add to Cart <i class="fa fa-shopping-cart"></i></button>
                            <button type="button" class="btn btn_border2">Documentation</button>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="product_slider">
                            <div id="productSlider" class="w-100 carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators mb-0">
                                    <li data-target="#productSlider" data-slide-to="0" class="active"></li>
                                    <li data-target="#productSlider" data-slide-to="1"></li>
                                    <li data-target="#productSlider" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="@Model.PrimaryImageUrl" class="d-block img-fluid mx-auto" alt="image">
                                        <a href="#" class="rotate"><img src="~/Assets/Images/rotate_icon.svg" alt="icon" class="img-fluid"></a>
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Assets/Images/product01.png" class="d-block img-fluid mx-auto" alt="image">
                                        <a href="#" class="rotate"><img src="~/Assets/Images/rotate_icon.svg" alt="icon" class="img-fluid"></a>
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Assets/Images/product01.png" class="d-block img-fluid mx-auto" alt="image">
                                        <a href="#" class="rotate"><img src="~/Assets/Images/rotate_icon.svg" alt="icon" class="img-fluid"></a>
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#productSlider" role="button" data-slide="prev">
                                    <img src="~/Assets/Images/left_arrow.svg" alt="icon" class="img-fluid">
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#productSlider" role="button" data-slide="next">
                                    <img src="~/Assets/Images/right_arrow.svg" alt="icon" class="img-fluid">
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section script
{
    <script src="~/Mvc/Views/ProductDetail/js/jquery.min.js"></script>
    <script src="~/Mvc/Views/ProductDetail/js/bootstrap.bundle.min.js"></script>
}