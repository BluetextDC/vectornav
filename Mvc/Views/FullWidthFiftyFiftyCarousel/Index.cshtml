@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/bootstrap.min.css"), "head")
@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/BT/css/custom.min.css"), "head")
@model SitefinityWebApp.Mvc.Models.FullWidthFiftyFiftyCarouselModel 

<body class="front_page">
    <main class="wraper career_page">
        <section class="engineer_sec">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <div class="box_img">
                        <img src="~/ResourcePackages/BT/images/engineer.jpg" alt="image" class="img-fluid">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box_content">
                        <div id="employeeCarousel" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators mb-0">
                                <li data-target="#employeeCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#employeeCarousel" data-slide-to="1"></li>
                                <li data-target="#employeeCarousel" data-slide-to="2"></li>
                                <li data-target="#employeeCarousel" data-slide-to="3"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="content text-white">
                                        <h2>" @Model.Content1 </h2>
                                        <h3>Employee Name, Engineer</h3>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="content text-white">
                                        <h2>@Model.Content2</h2>
                                        <h3>Employee Name, Engineer</h3>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="content text-white">
                                        <h2>@Model.Content3</h2>
                                        <h3>Employee Name, Engineer</h3>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="content text-white">
                                        <h2>@Model.Content4</h2>
                                        <h3>Employee Name, Engineer</h3>
                                    </div>
                                </div>

                                <div class="carousel-item">
                                    <div class="content text-white">
                                        <h2>@Model.Content5</h2>
                                        <h3>Employee Name, Engineer</h3>
                                    </div>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#employeeCarousel" role="button" data-slide="prev">
                                <img src="~/ResourcePackages/BT/images/left_arrow.svg" alt="icon" class="img-fluid">
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#employeeCarousel" role="button" data-slide="next">
                                <img src="~/ResourcePackages/BT/images/right_arrow.svg" alt="icon" class="img-fluid">
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>

@Html.Script(Url.WidgetContent("~/ResourcePackages/BT/js/jquery.min.js"), "bottom")
@Html.Script(Url.WidgetContent("~/ResourcePackages/BT/js/bootstrap.bundle.min.js"), "bottom")


